<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{title}}</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/frontend/static/styles.css">
</head>

<body class="bg-light">
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{homeHref}}">Systems Monitor</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link {{#if isDashboard}}active{{/if}}" {{#if isDashboard}}aria-current="page" {{/if}}
              href="{{dashboardHref}}">
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{#if isAbout}}active{{/if}}" {{#if isAbout}}aria-current="page" {{/if}}
              href="{{aboutHref}}">
              About
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Controls -->
  <div class="container mt-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="row g-3 align-items-center">
          <!-- Mode dropdown -->
          <div class="col-12 col-md-4">
            <label for="modeSelect" class="form-label">Select Mode:</label>
            <select id="modeSelect" class="form-select">
              <option value="latest" {{#if isLatestMode}}selected{{/if}}>Latest Data</option>
              <option value="range" {{#if isRangeMode}}selected{{/if}}>Data Range</option>
            </select>
          </div>

          <!-- Range dropdown -->
          <div class="col-12 col-md-4 {{rangeHiddenClass}}" id="rangeContainer">
            <label for="rangeSelect" class="form-label">Select Range:</label>
            <select id="rangeSelect" class="form-select">
              {{#each rangeOptions}}
              <option value="{{value}}" {{#if selected}}selected{{/if}}>
                {{label}}
              </option>
              {{/each}}
            </select>
          </div>

          <!-- Refresh button -->
          <div class="col-12 col-md-2">
            <button id="refreshBtn" class="btn btn-primary w-100">Refresh</button>
          </div>

          <!-- Status text -->
          <div class="col-12 col-md-2">
            <div id="statusText" class="text-muted small">{{statusText}}</div>
            <div id="autoRefreshText" class="text-muted small d-none">Auto-refreshing every 5s</div>
          </div>
        </div>

        <div id="errorAlert" class="alert alert-danger mt-3 d-none" role="alert"></div>
      </div>
    </div>
  </div>

  <!-- Metrics Tables -->
  <div class="container mt-5">
    <div class="row g-4">
      <div class="col-12 col-lg-6">
        <h2>System Metrics</h2>
        <div class="text-muted small">
          Last Updated: <span id="lastUpdate">-</span>
        </div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h3 class="h5">CPU Metrics</h3>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Metric</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody id="cpuTableBody">
              </tbody>
            </table>
          </div>
        </div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h3 class="h5">Memory Metrics</h3>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Metric</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody id="memoryTableBody">
              </tbody>
            </table>
          </div>
        </div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h3 class="h5">Disk Metrics</h3>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Metric</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody id="diskTableBody">
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- Charts -->
      <div class="col-12 col-lg-6">
        <h2 class="mb-3">System Metric Charts</h2>
        <div class="text-muted small">Last polled: <span id="lastPoll">-</span></div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-3">CPU</h5>
            <div style="height: 240px;">
              <canvas id="cpuChart"></canvas>
            </div>
          </div>
        </div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-3">Memory</h5>
            <div style="height: 240px;">
              <canvas id="memoryChart"></canvas>
            </div>
          </div>
        </div>
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title mb-3">Disk</h5>
            <div style="height: 240px;">
              <canvas id="diskChart"></canvas>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="{{dashboardJsPath}}"></script>
</body>

</html>